<h1>Shout Feed</h1>
<%# Button that does link_to("Create a show", new_shout_path) %>
<%# shout list, which does render @shouts %>
<%= form_tag(shouts_path, method: :get) do %>
  <%= render 'shared/filter_form' %>
<% end %>

<%= form_for Shout.new do |f| %>
  <%= f.label :body %>
  <%= f.text_area :body %>

  <%= f.submit %>
<% end %>


<ul class="shouts-list">
  <%= render @shouts %>
</ul>
